<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/googlemapLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shang.gascheap.GoogleMap.MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.0"
        tools:context="com.shang.gascheap.GoogleMap.MapsActivity" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/nevigationBt"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="26dp"
        android:clickable="true"
        android:src="@drawable/ic_navigation"
        android:visibility="invisible"
        app:backgroundTint="@color/lightBule"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/favoriteGasBt"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="26dp"
        android:clickable="true"
        android:src="@drawable/ic_favorite"
        android:visibility="invisible"
        app:backgroundTint="@color/lightBule"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/nevigationBt"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>


